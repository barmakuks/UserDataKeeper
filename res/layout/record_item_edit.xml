<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" android:id="@+id/item_edit">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/key_name"
            android:id="@+id/textView" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
            android:textColor="@android:color/holo_green_light"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editKey" android:layout_gravity="center_horizontal" android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" android:inputType="text"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/value"
            android:id="@+id/textView2" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
            android:textColor="@android:color/holo_green_light"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editValue" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
            android:inputType="text"/>
</LinearLayout>